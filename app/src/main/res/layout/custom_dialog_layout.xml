<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_radius_with_color_questions"
    android:padding="16dp"
    android:id="@+id/dealDialogLayout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/blue">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Update Deal Analysis"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:gravity="bottom"
            android:textSize="20sp"
            android:textStyle="bold" />
    <ImageView
        android:id="@+id/negative_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/red"
        android:text="Cancel"
        android:src="@drawable/cancel_btn" />
    </LinearLayout>


    <EditText
        android:id="@+id/first_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:padding="14dp"
        android:inputType="textWebEmailAddress"
        android:hint="Deal name"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_dialogbox_style"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/second_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:padding="14dp"
        android:hint=" 0"
        android:drawableLeft="@drawable/dollarvector"
        android:drawableTint="@color/white"
        android:maxLength="11"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_dialogbox_style"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/editTextDealCloseValue_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:padding="14dp"
        android:inputType="date"
        android:hint="mm/dd/yyyy"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_dialogbox_style"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="Update"
        android:layout_marginTop="14dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/red"/>

</LinearLayout>