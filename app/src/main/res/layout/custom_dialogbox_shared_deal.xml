<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_radius_with_color_questions"
    android:padding="16dp"
    android:id="@+id/custom_shareBox_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/blue">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Send your Deal"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:gravity="bottom"
            android:textSize="20sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/negative_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/red"
            android:text="Cancel"
            android:src="@drawable/cancel_btn" />
    </LinearLayout>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:padding="14dp"
        android:inputType="textWebEmailAddress"
        android:hint="Example@gmail.com"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_dialogbox_style"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/message_edit_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_dialogbox_style"
        android:backgroundTint="@color/black"
        android:gravity="center_horizontal"
        android:hint="you can share deal details here \n
        *If the person you are sending this to doesnâ€™thave DealDoc please ask them to download it.*Also, remember to change your email address in your profile to the correct one."
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:minLines="3"
        android:lineBreakStyle="strict"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="Share Deal"
        android:layout_marginTop="14dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/red"/>

</LinearLayout>