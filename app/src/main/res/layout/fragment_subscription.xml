<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        tools:context="com.example.dealdoc.fragment_subscription">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewCategory"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.10"
                app:srcCompat="@drawable/dollar" />

            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DealDoc"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.14"
                app:layout_constraintStart_toStartOf="@id/imageViewCategory"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.10" />

            <ImageView
                android:id="@+id/IVBackBtnSubscription"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCategory"
                app:layout_constraintVertical_bias="0.05"
                app:srcCompat="@drawable/arrow_back" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pricing Plans"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IVBackBtnSubscription"
                app:layout_constraintVertical_bias="0.03">
            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subsciprions_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:padding="10dp"
                android:background="@drawable/border_radius_with_color_questions"
                android:weightSum="1"
                app:layout_constraintVertical_bias="0.03"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <TextView
                    android:id="@+id/textViewMonthy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monthly Subscription\n $6.99"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.03">
                </TextView>

                <TextView
                    android:id="@+id/textViewMonthy1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Once purchased this is a monthly\nrenewing subscription. Cancel any time."
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMonthy"
                    app:layout_constraintVertical_bias="0.03">
                </TextView>
                <TextView
                    android:id="@+id/textViewMonthy2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Create, answer questions, and find gaps in your deal"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMonthy1"
                    app:layout_constraintVertical_bias="0.03">
                </TextView>
                <TextView
                    android:id="@+id/textViewMonthy3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Close your gaps in your deal with coaching videos"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMonthy2"
                    app:layout_constraintVertical_bias="0.03">
                </TextView>
                <TextView
                    android:id="@+id/textViewMonthy4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Share your deal with friends and colleagues"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMonthy3"
                    app:layout_constraintVertical_bias="0.03">
                </TextView>
                <TextView
                    android:id="@+id/textViewMonthy5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Schedule Deal Coaching sessions"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMonthy4"
                    app:layout_constraintVertical_bias="0.03">
                </TextView>

                <Button
                    android:id="@+id/buysubscriptionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:text="Buy Now"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMonthy5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.945"
                    app:layout_constraintStart_toStartOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_bar_of_subscription"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:indeterminate="true"
                    android:max="100"
                    android:progress="0"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/buttonsLayout_sharedBtn_materialBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/SharedDealbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="Share Deal"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/sharedbtn"/>

                <Button
                    android:id="@+id/MaterialDealbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/red"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp"
                    android:visibility="gone"
                    android:text="Deal Material"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/TermToUse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/TermToUse"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subsciprions_layout"
                app:layout_constraintVertical_bias="0.092">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>